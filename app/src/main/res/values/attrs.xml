<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundLayout">
        <attr name="round_shadow_color" format="color" />
        <attr name="round_shadow_width" format="dimension" />
        <attr name="round_dx" format="dimension" />
        <attr name="round_dy" format="dimension" />
        <attr name="round_border_radius" format="dimension" />
        <attr name="round_border_color" format="color" />
        <attr name="round_border_width" format="dimension" />
        <attr name="round_shadow_sides" format="flags">
            <flag name="LEFT" value="1" />
            <flag name="TOP" value="2" />
            <flag name="RIGHT" value="4" />
            <flag name="BOTTOM" value="8" />
            <flag name="ALL" value="15" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TabLayout">
        <attr name="tlt_selected_text_size" format="dimension" />
        <attr name="tlt_unselected_text_size" format="dimension" />
        <attr name="tlt_selected_text_color" format="color|reference" />
        <attr name="tlt_unselected_text_color" format="color|reference" />
        <attr name="tlt_indicator_width" format="dimension" />
        <attr name="tlt_indicator_height" format="dimension" />
        <attr name="tlt_indicator_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="NavigationView">
        <attr name="ngv_icon_width" format="dimension" />
        <attr name="ngv_vertical_space" format="dimension" />
        <attr name="ngv_text_size" format="dimension" />
        <attr name="ngv_selected_text_size" format="dimension" />
        <attr name="ngv_text_color" format="color|reference" />
        <attr name="ngv_selected_text_color" format="color|reference" />
    </declare-styleable>
</resources>